<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="wt.muppety.presenter.EditRecommendationDialogPresenter">
    <center>
        <VBox styleClass="pad-space-10">
            <HBox styleClass="text-box">
                <Label text="Receiver"/>
                <ComboBox fx:id="employeeComboBox"/>
            </HBox>
            <HBox styleClass="text-box">
                <TextArea fx:id="messageTextArea"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" styleClass="pad-space-10">
            <Button styleClass="red" onAction="#handleCancelAction" text="_Cancel"/>
            <Button styleClass="blue" onAction="#handleOkAction" text="_Send"/>
        </HBox>
    </bottom>
    <stylesheets>
        <URL value="@../../styles/editDialog.css"/>
    </stylesheets>
</BorderPane>
