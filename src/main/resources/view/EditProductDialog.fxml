<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import wt.muppety.view.DynamicComboBoxPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="wt.muppety.presenter.EditProductDialogPresenter"
            prefWidth="500.0">
    <center>
        <GridPane hgap="5.0" vgap="5.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="20.0"/>
                <RowConstraints minHeight="20.0"/>
                <RowConstraints minHeight="20.0"/>
                <RowConstraints minHeight="20.0"/>
                <RowConstraints minHeight="20.0"/>
            </rowConstraints>
            <Label text="Name">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </Label>
            <Label text="Price" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </Label>
            <Label text="Categories" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </Label>
            <Label text="Supplier" GridPane.rowIndex="3">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </Label>
            <Label text="Manufacturer" GridPane.rowIndex="4">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </Label>
            <Label text="On prescription" GridPane.rowIndex="5">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </Label>
            <TextField fx:id="nameTextField" GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </TextField>
            <TextField fx:id="priceTextField" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </TextField>
            <ScrollPane prefHeight="50.0" style="-fx-background-color: transparent;"
                        GridPane.columnIndex="1" GridPane.rowIndex="2">
                <DynamicComboBoxPane fx:id="categoryComboBox" prefWidth="300.0"/>
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </ScrollPane>
            <ComboBox fx:id="supplierComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </ComboBox>
            <TextField fx:id="manufacturerTextField" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </TextField>
            <CheckBox fx:id="onPrescriptionCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="5">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </CheckBox>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
            <Button onAction="#handleCancelAction" prefWidth="100.0" text="_Cancel">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
            <Button onAction="#handleOkAction" prefWidth="60.0" text="_Ok">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </bottom>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
</BorderPane>
